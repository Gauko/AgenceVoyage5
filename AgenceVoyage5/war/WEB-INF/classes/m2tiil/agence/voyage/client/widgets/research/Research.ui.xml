<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.panel}">
		<g:TabPanel height="422px" width="429px">
			<g:Tab text="New tab">
				<g:VerticalPanel width="5cm" height="3cm">
					<g:HorizontalPanel height="25px" width="402px">
						<g:RadioButton name="radioTicketType" height="35px" text="Aller-Simple" width="190px" checked="true"/>
						<g:RadioButton name="radioTicketType" height="20px" width="197px">Aller-Retour</g:RadioButton>
					</g:HorizontalPanel>
					<g:HorizontalPanel width="405px">
						<g:ListBox width="202px" ui:field="aeroportDepart"/>
						<g:ListBox width="198px" ui:field="aeroportArrive"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<p1:DatePicker ui:field="dateDepart"/>
						<p1:DatePicker width="213px" ui:field="dateArrive"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:CheckBox text="Meilleur Prix a +- 3j" width="401px" ui:field="meilleurPrix"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel width="437px">
						<g:ListBox width="143px" ui:field="listPersonne"/>
						<g:ListBox width="161px" ui:field="ListFortfais"/>
						<g:Button ui:field="validate">Validate</g:Button>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:Tab>
		</g:TabPanel>
	
	
	</g:FlowPanel>
</ui:UiBinder>
